<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/czfylib" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/ed_lib_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:hint="请输入搜索的书名" />

        <ImageView
            android:id="@+id/bt_lib_search"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="search"
            android:src="@drawable/search" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_search_re1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="软件"
                android:textColor="#4F94CD"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_search_re2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  平凡的世界"
                android:textColor="#3A5FCD"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tv_search_re3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  cad"
                android:textColor="#551A8B"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_search_re4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="达芬奇"
                android:textColor="#CD0000"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/tv_search_re5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  机器学习"
                android:textColor="#B8860B"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_search_re6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  英语"
                android:textColor="#66CD00"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_search_re7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="photoshop"
                android:textColor="#CD8500"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_search_re8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  工匠精神"
                android:textColor="#458B00"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/tv_search_re9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  会计"
                android:textColor="#66CD00"
                android:textSize="25dp" />
        </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                 android:id="@+id/tv_search_re10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="经济"
                android:textColor="#9400D3"
                android:textSize="20dp" />

            <TextView
                 android:id="@+id/tv_search_re11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  人体工程学"
                android:textColor="#3A5FCD"
                android:textSize="30dp" />

            <TextView
                 android:id="@+id/tv_search_re12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  服装"
                android:textColor="#CD00CD"
                android:textSize="25dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>