<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include layout="@layout/lib_head" />

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_dj_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="1.(单选)---------------------------------------------------------------------------------------------本次更新新增了教师登录以及访客登录;同时优化了课表查询，将课表分成每一周显示;"
                    android:textColor="@color/blue"
                    android:textSize="18dp" />

                <RadioGroup
                    android:id="@+id/rg_xuanxiang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/rb_answerA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A.部门    "
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/rb_answerB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B.教师    "
                        android:layout_marginTop="20dp"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/rb_answerC"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C.学生    "
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/rb_answerD"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_height="wrap_content"
                        android:text="D.部门    "
                        android:textSize="20dp" />
                </RadioGroup>
            </LinearLayout>
        </ScrollView>

       

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_uppage"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                 android:background="#cfcfcf"
                android:text="上一题"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_page"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                 android:background="#cfcfcf"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1/20"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_nextpage"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                 android:background="#cfcfcf"
                android:text="下一题"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>